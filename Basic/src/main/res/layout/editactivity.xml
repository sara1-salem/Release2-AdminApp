<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/stairs"
        android:layout_width="155dp"
        android:layout_height="85dp"
        android:layout_marginBottom="152dp"
        android:background="@drawable/clsc_btn_for_all"
        android:drawableTop="@drawable/stair"
        android:padding="10dp"
        android:text="stairs"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.16"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/others"
        android:layout_width="155dp"
        android:layout_height="85dp"
        android:layout_marginBottom="152dp"
        android:background="@drawable/clsc_btn_for_all"
        android:drawableTop="@drawable/other"
        android:padding="10dp"
        android:text="Others"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.804"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/T1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the name of a Landmark..."
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/save1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.645" />

    <Button
        android:id="@+id/save1"
        android:layout_width="155dp"
        android:layout_height="85dp"
        android:layout_marginBottom="336dp"
        android:background="@drawable/clsc_btn_for_all"
        android:drawableTop="@drawable/classroom"
        android:padding="10dp"
        android:text=" classroom"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.16"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/WC"
        android:layout_width="155dp"
        android:layout_height="85dp"
        android:layout_marginBottom="244dp"
        android:background="@drawable/clsc_btn_for_all"
        android:drawableTop="@drawable/wc"
        android:padding="10dp"
        android:text="WC"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.804"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="276dp"
        android:gravity="center"
        android:text="Please Select Type:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.442"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/coffee"
        android:layout_width="155dp"
        android:layout_height="85dp"
        android:layout_marginBottom="336dp"
        android:background="@drawable/clsc_btn_for_all"
        android:drawableTop="@drawable/cofe"
        android:padding="10dp"
        android:text=" coffee area"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.804"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/exit"
        android:layout_width="155dp"
        android:layout_height="85dp"
        android:layout_marginBottom="244dp"
        android:background="@drawable/clsc_btn_for_all"
        android:drawableTop="@drawable/exit"
        android:padding="10dp"
        android:text=" Exit"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.16"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="415dp"
        android:layout_height="53dp"
        android:background="@color/gm_blue"
        android:gravity="center"
        android:text="Add A Landmark"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:layout_width="103dp"
        android:layout_height="48dp"
        android:layout_marginBottom="76dp"
        android:gravity="center"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:onClick="OnCancelLMBtn"
        android:textColor="@color/gm_blue"
        android:background="@drawable/title_boxes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>